{
  "name": "hanq",
  "version": "0.0.3",
  "private": true,
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "main": "electron/background.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "chcp 65001 >NUL & cross-env electron .",
    "dev:desktop": "npm run dev & npm run electron",
    "build:desktop": "npm run build && electron-builder --win nsis portable",
    "build:win": "npm run build && electron-builder --win --x64"
  },
  "build": {
    "appId": "com.hanq.app",
    "productName": "HANQ",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "icon": "public/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "한큐",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "kimgwangsoo",
        "repo": "hanq_front_public",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.884.0",
    "@channel.io/channel-web-sdk-loader": "^2.0.0",
    "@electron/remote": "^2.1.3",
    "axios": "^1.11.0",
    "chart.js": "^4.4.0",
    "chromedriver": "^140.0.3",
    "core-js": "^3.8.3",
    "dayjs": "^1.11.13",
    "electron-devtools-installer": "^4.0.0",
    "electron-updater": "^6.6.2",
    "element-plus": "^2.11.3",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "module-alias": "^2.2.3",
    "pnpm": "^10.15.1",
    "print-js": "^1.6.0",
    "selenium-webdriver": "^4.35.0",
    "socket.io-client": "^4.8.1",
    "sweetalert2": "^11.14.2",
    "tmp": "^0.2.5",
    "unzipper": "^0.12.3",
    "vue-chartjs": "^5.2.0",
    "vue-datepicker-next": "^1.0.3",
    "vue-flatpickr-component": "^12.0.0",
    "vue-material-design-icons": "^5.3.1",
    "vue-router": "^4.4.5",
    "vue3-styled-components": "^1.2.1",
    "vuex": "^4.0.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/compiler-sfc": "^3.4.38",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vue": "^3.4.38",
    "wait-on": "^9.0.1"
  }
}
